{
    "version": "1.0.0",
    "display_name": "Yeelight",
    "description": "Control Yeelight smart lighting with local network access.",
    "author": "IoT2MQTT",
    "branding": {
        "icon": "/assets/brands/yeelight.svg",
        "color": "#FF7E35",
        "category": "lighting"
    },
    "multi_device": {
        "enabled": true,
        "max_devices": 100,
        "device_label": "Yeelight Device",
        "add_button_label": "Add Another Device",
        "loop_from_step": "ip_form",
        "loop_to_step": "device_config"
    },
    "requirements": {
        "network": "host",
        "python": "3.11",
        "libraries": [
            "yeelight"
        ]
    },
    "tools": {
        "discover_devices": {
            "entry": "actions/discover.py",
            "timeout": 15,
            "network": "local"
        },
        "validate_device": {
            "entry": "actions/validate.py",
            "timeout": 10,
            "network": "local"
        }
    },
    "flows": [
        {
            "id": "manual_entry",
            "name": "Manual",
            "description": "Manually specify device parameters.",
            "default": true,
            "steps": [
                {
                    "id": "ip_form",
                    "type": "form",
                    "title": "IP Connection",
                    "description": "Enter the IP address of your Yeelight device.",
                    "schema": {
                        "fields": [
                            {
                                "type": "text",
                                "name": "ip",
                                "label": "IP address",
                                "placeholder": "192.168.1.100",
                                "required": true
                            },
                            {
                                "type": "number",
                                "name": "port",
                                "label": "Port",
                                "default": 55443,
                                "advanced": true
                            }
                        ]
                    }
                },
                {
                    "id": "validate",
                    "type": "tool",
                    "title": "Validate device",
                    "description": "Verify the device responds.",
                    "tool": "validate_device",
                    "input": {
                        "host": "{{ form.ip_form.ip }}",
                        "port": "{{ form.ip_form.port }}"
                    },
                    "auto_advance": true
                },
                {
                    "id": "device_config",
                    "type": "form",
                    "title": "Device Configuration",
                    "description": "Configure your Yeelight device.",
                    "schema": {
                        "fields": [
                            {
                                "type": "text",
                                "name": "friendly_name",
                                "label": "Device name",
                                "placeholder": "Living Room Light",
                                "required": true
                            },
                            {
                                "type": "text",
                                "name": "instance_id",
                                "label": "Instance ID",
                                "placeholder": "auto",
                                "description": "Leave empty to auto-generate unique instance ID",
                                "advanced": true
                            },
                            {
                                "type": "select",
                                "name": "effect_type",
                                "label": "Transition",
                                "default": "smooth",
                                "advanced": true,
                                "options": [
                                    {
                                        "value": "smooth",
                                        "label": "Smooth"
                                    },
                                    {
                                        "value": "sudden",
                                        "label": "Sudden"
                                    }
                                ]
                            },
                            {
                                "type": "number",
                                "name": "duration",
                                "label": "Transition duration (ms)",
                                "default": 300,
                                "min": 30,
                                "max": 10000,
                                "step": 50,
                                "advanced": true
                            },
                            {
                                "type": "checkbox",
                                "name": "ha_discovery_enabled",
                                "label": "Enable Home Assistant Discovery",
                                "description": "Automatically publish device information to Home Assistant via MQTT Discovery",
                                "default": true,
                                "advanced": true
                            }
                        ]
                    }
                },
                {
                    "id": "manual_summary",
                    "type": "summary",
                    "title": "Review",
                    "sections": [
                        {
                            "label": "Device Name",
                            "value": "{{ form.device_config.friendly_name }}"
                        },
                        {
                            "label": "IP Address",
                            "value": "{{ form.ip_form.ip }}:{{ form.ip_form.port }}"
                        }
                    ]
                },
                {
                    "id": "manual_create",
                    "type": "instance",
                    "instance": {
                        "instance_id": "{{ form.device_config.instance_id }}",
                        "friendly_name": "{{ form.device_config.friendly_name }}",
                        "connector_type": "yeelight",
                        "update_interval": 10,
                        "ha_discovery_enabled": "{{ form.device_config.ha_discovery_enabled }}",
                        "config": {
                            "discovery_enabled": false,
                            "effect_type": "{{ form.device_config.effect_type }}",
                            "duration": "{{ form.device_config.duration }}"
                        },
                        "devices": [
                            {
                                "device_id": "{{ form.device_config.friendly_name }}",
                                "ip": "{{ form.ip_form.ip }}",
                                "port": "{{ form.ip_form.port }}",
                                "name": "{{ form.device_config.friendly_name }}",
                                "enabled": true
                            }
                        ]
                    }
                }
            ]
        }
    ]
}
