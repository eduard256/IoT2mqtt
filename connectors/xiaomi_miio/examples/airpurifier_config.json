{
  "instance_id": "xiaomi_air",
  "connector_type": "xiaomi_miio",
  "name": "Xiaomi Air Purifiers",
  
  "devices": [
    {
      "device_id": "purifier_3h",
      "name": "Mi Air Purifier 3H",
      "host": "192.168.1.110",
      "token": "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
      "model": "zhimi.airpurifier.mb3",
      "features": {
        "supports_led_brightness": true,
        "supports_favorite_level": true,
        "supports_child_lock": true,
        "supports_buzzer": true
      }
    },
    {
      "device_id": "purifier_pro",
      "name": "Mi Air Purifier Pro",
      "host": "192.168.1.111",
      "token": "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
      "model": "zhimi.airpurifier.v6",
      "features": {
        "supports_volume": true,
        "supports_learn_mode": true
      }
    },
    {
      "device_id": "purifier_4_pro",
      "name": "Mi Air Purifier 4 Pro",
      "host": "192.168.1.112",
      "token": "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
      "model": "zhimi.airp.vb4",
      "features": {
        "supports_anion": true,
        "supports_favorite_rpm": true
      }
    }
  ],
  
  "commands_examples": {
    "turn_on": {
      "values": {
        "power": true
      }
    },
    "turn_off": {
      "values": {
        "power": false
      }
    },
    "set_mode_auto": {
      "values": {
        "mode": "Auto"
      }
    },
    "set_mode_silent": {
      "values": {
        "mode": "Silent"
      }
    },
    "set_mode_favorite": {
      "values": {
        "mode": "Favorite"
      }
    },
    "set_favorite_level": {
      "values": {
        "favorite_level": 10
      }
    },
    "set_favorite_rpm": {
      "values": {
        "favorite_rpm": 1500
      }
    },
    "set_fan_level": {
      "values": {
        "speed": 75
      }
    },
    "enable_child_lock": {
      "values": {
        "child_lock": true
      }
    },
    "disable_buzzer": {
      "values": {
        "buzzer": false
      }
    },
    "set_led_off": {
      "values": {
        "led": false
      }
    },
    "set_led_brightness": {
      "values": {
        "led_brightness": 50
      }
    },
    "enable_anion": {
      "values": {
        "ionizer": true
      }
    },
    "reset_filter": {
      "values": {
        "reset_filter": true
      }
    },
    "query_status": {
      "values": {
        "query": ["status", "consumables"]
      }
    }
  },
  
  "automations": [
    {
      "name": "Auto Mode on High AQI",
      "trigger": {
        "air_quality": "> 150"
      },
      "action": {
        "power": true,
        "mode": "Auto"
      }
    },
    {
      "name": "Night Mode",
      "trigger": {
        "time": "22:00"
      },
      "action": {
        "mode": "Silent",
        "led": false
      }
    }
  ]
}